{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@invana/ui": ["../../packages/ui/src"],
      "@invana/ui/*": ["../../packages/ui/src/*"],
      // "@invana/tailwind-config": ["../../packages/tailwind-config/tailwind.config.js"],
      // "@/lib": ["../../packages/ui/src/lib"],
      // "@/lib/*": ["../../packages/ui/src/lib/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
