{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // "@invana/ui": ["../../packages/ui/src"],
      "@invana/config-tailwind": [
        "../../packages/config-tailwind/tailwind.config.js"
      ],
      "@invana/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@invana/canvas-flow": [
        "../../packages/canvas-flow/src"
      ],
      "@invana/canvas-flow/*": [
        "../../packages/canvas-flow/src/*"
      ],
      // "@/lib": ["../../packages/ui/src/lib"],
      // "@/lib/*": ["../../packages/ui/src/lib/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}