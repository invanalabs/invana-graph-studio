import { Button } from "@/components/ui/button"
import { Input } from "@/components/ui/input"
import { Search, Plus, X } from 'lucide-react'

interface LeftSidebarProps {
  content: 'database' | 'settings'
  setContent: (content: 'database' | 'settings' | null) => void
  tables: string[]
  newTableName: string
  setNewTableName: (name: string) => void
  addTable: () => void
}

export default function LeftSidebar({ content, setContent, tables, newTableName, setNewTableName, addTable }: LeftSidebarProps) {
  return (
    <div className="h-full border-r border-border flex flex-col">
      {content === 'database' ? (
        <>
          <div className="flex items-center justify-between border-b border-border h-8">
            <h2 className="text-sm font-bold px-2">DATABASE EXPLORER</h2>
            <Button variant="ghost" size="icon" onClick={() => setContent(null)} className="h-8 w-8"><X size={16} /></Button>
          </div>
          <div className="relative p-1">
            <Search className="absolute left-2 top-1/2 transform -translate-y-1/2 text-muted-foreground" size={12} />
            <Input className="pl-6 h-6 text-xs" type="text" placeholder="Search" />
          </div>
          <div className="flex p-1">
            <Input
              type="text"
              placeholder="New table name"
              value={newTableName}
              onChange={(e) => setNewTableName(e.target.value)}
              className="mr-1 h-6 text-xs"
            />
            <Button onClick={addTable} size="icon" className="h-6 w-6"><Plus size={12} /></Button>
          </div>
          <ul className="flex-1 overflow-auto text-xs">
            {tables.map((table, index) => (
              <li key={index} className="px-1 py-0.5">{table}</li>
            ))}
          </ul>
        </>
      ) : (
        <div className="p-1">
          <h2 className="text-sm font-bold mb-1">Settings</h2>
          <p className="text-xs">Settings content goes here</p>
        </div>
      )}
    </div>
  )
}